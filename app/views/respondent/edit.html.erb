<h1><strong>Edit Respondent</strong></h1>
<form action="/respondent" method="post">
	<div class="form-group">
		<label>First Name:</label>
		<input type="text" value="<%= @respondent.first_name%>" name="respondent[first_name]" class="form-control">
	</div>
	<div class="form-group">
		<label>Last Name:</label>
		<input type="text" value="<%= @respondent.last_name%>" name="respondent[last_name]" class="form-control">
	</div>
	<div class="form-group">
		<label>Email:</label>
		<input type="text" value="<%= @respondent.email%>" name="respondent[email]" class="form-control">
	</div>
	<input type="submit" value="Update" class="btn btn-success">
</form>
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<div class="alert-danger"><%= e %><div>
	<% end %>
<% end %>