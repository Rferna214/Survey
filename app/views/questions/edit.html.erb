<h1><strong>Edit Question: <%= @question.question_text %></strong></h1>
<form action="/questions/<%= @question.id %>" method="post">
	<div>
		<label>Question Text:</label>
		<input type="text" name="question[question_text]" value="<%= @question.question_text%>" class="form-control">
	</div>
	<input type="submit" value="Update" class="btn btn-success">
</form>
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<div class="alert-danger"><%= e %><div>
	<%end%>
<%end%>